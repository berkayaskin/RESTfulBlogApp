<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog Centent</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <button class="ui inverted violet button" type="submit">Edit</button>
        
    </form>
</div>
<% include ./partials/header %>